@model IEnumerable<ToolCaptureAppClean.Models.ToolTest>

@{
    ViewData["Title"] = "Tool Test List";
}

<h2>Tool Test Records</h2>
<hr />

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">➕ New Tool Test</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No tool tests recorded yet.</div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.ToolId</h5>
                        <p class="mb-1"><strong>Date:</strong> @item.TestDate.ToShortDateString()</p>
                        <p class="mb-1"><strong>Operator:</strong> @item.Operator</p>
                        <p class="mb-1"><strong>Customer:</strong> @item.Customer</p>
                        <p class="mb-1"><strong>Material:</strong> @item.Material</p>
                        <p class="mb-1"><strong>Operation:</strong> @item.Operation</p>
                        <p class="mb-1"><strong>Coolant:</strong> @item.Coolant</p>
                        <p class="mb-1"><strong>Remarks:</strong> @item.Notes</p>

                        @if (!string.IsNullOrEmpty(item.PhotoPath))
                        {
                            var photos = item.PhotoPath.Split(';');
                            <div class="d-flex flex-wrap mt-2">
                                @foreach (var photo in photos)
                                {
                                    <img src="@photo" width="70" class="rounded border me-1 mb-1" />
                                }
                            </div>
                        }

                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Del
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
